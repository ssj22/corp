<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration debug="false" xmlns:log4j="http://jakarta.apache.org/log4j/">
  	
  	<appender name="CORP-SPRING" class="org.apache.log4j.RollingFileAppender">
	    <param name="File" value="${catalina.home}/logs/CORP/CORP-spring.log"/>
	    <param name="Append" value="true"/>
	    <param name="Threshold" value="WARN"/>
	    <param name="MaxFileSize" value="100MB"/>
	    <param name="MaxBackupIndex" value="10" />
	    <layout class="org.apache.log4j.PatternLayout">
	      <param name="ConversionPattern" value="%d{yyyy-MM-dd HH:mm:ss} %p [%t] %C{1}.%M(%L) | %m%n"/>
	    </layout>
  	</appender> 
  	
  	<appender name="CORP-HIBERNATE" class="org.apache.log4j.RollingFileAppender">
	    <param name="File" value="${catalina.home}/logs/CORP/CORP-hibernate.log"/>
	    <param name="Append" value="true"/>
	    <param name="Threshold" value="WARN"/>
	    <param name="MaxFileSize" value="100MB"/>
	    <param name="MaxBackupIndex" value="10" />
	    <layout class="org.apache.log4j.PatternLayout">
	      <param name="ConversionPattern" value="%d{yyyy-MM-dd HH:mm:ss} %p [%t] %C{1}.%M(%L) | %m%n"/>
	    </layout>
  	</appender> 
  	
  	<appender name="CORP-EHCACHE" class="org.apache.log4j.RollingFileAppender">
	    <param name="File" value="${catalina.home}/logs/CORP/CORP-ehcache.log"/>
	    <param name="Append" value="true"/>
	    <param name="Threshold" value="WARN"/>
	    <param name="MaxFileSize" value="100MB"/>
	    <param name="MaxBackupIndex" value="10" />
	    <layout class="org.apache.log4j.PatternLayout">
	      <param name="ConversionPattern" value="%d{yyyy-MM-dd HH:mm:ss} %p [%t] %C{1}.%M(%L) | %m%n"/>
	    </layout>
  	</appender> 
  	
  	<appender name="CORP-ERRORS" class="org.apache.log4j.RollingFileAppender">
	    <param name="File" value="${catalina.home}/logs/CORP/CORP-error.log"/>
	    <param name="Append" value="true"/>
	    <param name="Threshold" value="ERROR"/>
	    <param name="MaxFileSize" value="100MB"/>
	    <param name="MaxBackupIndex" value="10" />
	    <layout class="org.apache.log4j.PatternLayout">
	      <param name="ConversionPattern" value="%d{yyyy-MM-dd HH:mm:ss} %p [%t] %C{1}.%M(%L) | %m%n"/>
	    </layout>
  	</appender> 
  	
  	<appender name="CORP-DEBUG" class="org.apache.log4j.RollingFileAppender">
	    <param name="File" value="${catalina.home}/logs/CORP/CORP-debug.log"/>
	    <param name="Append" value="true"/>
	    <param name="Threshold" value="WARN"/>
	    <param name="MaxFileSize" value="100MB"/>
	    <param name="MaxBackupIndex" value="10" />
	    <layout class="org.apache.log4j.PatternLayout">
	      <param name="ConversionPattern" value="%d{yyyy-MM-dd HH:mm:ss} %p [%t] %C{1}.%M(%L) | %m%n"/>
	    </layout>
  	</appender> 
  	
  	<appender name="CORP-SCHEDULER" class="org.apache.log4j.RollingFileAppender">
	    <param name="File" value="${catalina.home}/logs/CORP/CORP-scheduler.log"/>
	    <param name="Append" value="true"/>
	    <param name="Threshold" value="WARN"/>
	    <param name="MaxFileSize" value="100MB"/>
	    <param name="MaxBackupIndex" value="10" />
	    <layout class="org.apache.log4j.PatternLayout">
	      <param name="ConversionPattern" value="%d{yyyy-MM-dd HH:mm:ss} %p [%t] %C{1}.%M(%L) | %m%n"/>
	    </layout>
  	</appender> 
  	
  	<appender name="CORP-CLIENT" class="org.apache.log4j.RollingFileAppender">
	    <param name="File" value="${catalina.home}/logs/CORP/CORP-client.log"/>
	    <param name="Append" value="true"/>
	    <param name="Threshold" value="WARN"/>
	    <param name="MaxFileSize" value="100MB"/>
	    <param name="MaxBackupIndex" value="10" />
	    <layout class="org.apache.log4j.PatternLayout">
	      <param name="ConversionPattern" value="%d{yyyy-MM-dd HH:mm:ss} %p [%t] %C{1}.%M(%L) | %m%n"/>
	    </layout>
  	</appender> 

	<appender name="CORP-FMSDATA" class="org.apache.log4j.RollingFileAppender">
	    <param name="File" value="${catalina.home}/logs/CORP/CORP-fmsdata.log"/>
	    <param name="Append" value="true"/>
	    <param name="Threshold" value="DEBUG"/>
	    <param name="MaxFileSize" value="100MB"/>
	    <param name="MaxBackupIndex" value="10" />
	    <layout class="org.apache.log4j.PatternLayout">
	      <param name="ConversionPattern" value="%d{yyyy-MM-dd HH:mm:ss} %p [%t] %C{1}.%M(%L) | %m%n"/>
	    </layout>
  	</appender>
    
    <appender name="ASYNCDEBUG" class="org.apache.log4j.AsyncAppender">
            <param name="BufferSize" value="250"/>
            <param name="LocationInfo" value="true"/>
            <param name="Blocking" value="false" />
            <appender-ref ref="CORP-DEBUG" />
    </appender>
    
    <appender name="ASYNCCORP" class="org.apache.log4j.AsyncAppender">
            <param name="BufferSize" value="500"/>
            <param name="LocationInfo" value="true"/>
            <param name="Blocking" value="false" />
            <appender-ref ref="CORP-DEBUG" />
         	<appender-ref ref="CORP-ERRORS" />
    </appender>
    
    <appender name="ASYNCSPRING" class="org.apache.log4j.AsyncAppender">
            <param name="BufferSize" value="128"/>
            <param name="LocationInfo" value="true"/>
            <param name="Blocking" value="false" />
            <appender-ref ref="CORP-SPRING" />
    </appender>
    
    <appender name="ASYNCHIBERNATE" class="org.apache.log4j.AsyncAppender">
            <param name="BufferSize" value="250"/>
            <param name="LocationInfo" value="true"/>
            <param name="Blocking" value="false" />
            <appender-ref ref="CORP-HIBERNATE" />
    </appender>
    
    <appender name="ASYNCEHCACHE" class="org.apache.log4j.AsyncAppender">
            <param name="BufferSize" value="128"/>
            <param name="LocationInfo" value="true"/>
            <param name="Blocking" value="false" />
            <appender-ref ref="CORP-EHCACHE" />
    </appender>
    
     <appender name="ASYNCSCHEDULER" class="org.apache.log4j.AsyncAppender">
            <param name="BufferSize" value="128"/>
            <param name="LocationInfo" value="true"/>
            <param name="Blocking" value="false" />
            <appender-ref ref="CORP-SCHEDULER" />
    </appender>

	<appender name="ASYNCFMSDATAHANDLER" class="org.apache.log4j.AsyncAppender">
            <param name="BufferSize" value="128"/>
            <param name="LocationInfo" value="true"/>
            <param name="Blocking" value="false" />
            <appender-ref ref="CORP-FMSDATA" />
    </appender>
    
     <appender name="ASYNCEHCACHE" class="org.apache.log4j.AsyncAppender">
            <param name="BufferSize" value="128"/>
            <param name="LocationInfo" value="true"/>
            <param name="Blocking" value="false" />
            <appender-ref ref="CORP-EHCACHE" />
    </appender>
    
    <logger name="net.corp" additivity="false">
        <level value="INFO" />
        <appender-ref ref="ASYNCCORP" />
    </logger>
    
    <logger name="org.springframework">
    	<level value="WARN"/>
    	<appender-ref ref="ASYNCSPRING"/>
	</logger>
	
    <logger name="org.hibernate">
		<level value="WARN" />
    	<appender-ref ref="ASYNCHIBERNATE"/>
	</logger>
	
	<logger name="org.hibernate.cache">
		<level value="WARN" />
    	<appender-ref ref="ASYNCEHCACHE"/>
	</logger>
	
	<logger name="org.hibernate.SQL ">
		<level value="WARN" />
    	<appender-ref ref="ASYNCHIBERNATE"/>
	</logger>
	
	<logger name="org.springframework.jms.listener.DefaultMessageListenerContainer">
		<level value="WARN" />
    	<appender-ref ref="ASYNCDEBUG"/>
	</logger>
	
	<logger name="org.hibernate.type">
    	<level value="WARN"/>
    	<appender-ref ref="ASYNCHIBERNATE"/>
	</logger>	

	<logger name="org.quartz">
    	<level value="WARN"/>
    	<appender-ref ref="ASYNCSCHEDULER"/>
	</logger>
	
	<logger name="org.springframework.scheduling.quartz">
    	<level value="WARN"/>
    	<appender-ref ref="ASYNCSCHEDULER"/>
	</logger>
	
	<logger name="org.springframework.security">
    	<level value="WARN"/>
    	<appender-ref ref="ASYNCSPRING"/>
	</logger>
	
	<logger name="com.fuelquest.mothra.scheduling">
    	<level value="WARN"/>
    	<appender-ref ref="ASYNCSCHEDULER"/>
	</logger>

	<logger name="net.sf.jasperreports">
	    <level value="WARN" />
    	<appender-ref ref="ASYNCDEBUG"/>
	</logger>
	
	<logger name="com.amazonaws.http.AmazonHttpClient">
	    <level value="WARN" />
    	<appender-ref ref="ASYNCDEBUG"/>
	</logger>

	<logger name="com.fuelquest.mothra.jms.handler.FMSDataHandler">
    	<level value="DEBUG"/>
    	<appender-ref ref="ASYNCFMSDATAHANDLER"/>
	</logger>
	
	<logger name="httpclient.wire">
          <level value="WARN" />
    </logger> 
        
    <root>
        <level value="INFO"/>
        <appender-ref ref="ASYNCCORP" />
    </root>
</log4j:configuration>